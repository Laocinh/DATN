            </div>
            <div class="form-group">
                <label asp-for="Major" class="control-label">Tên ngành học</label>
                <select asp-for="Major" class ="form-control" asp-items="ViewBag.Major"></select>
            </div>
            <div class="form-group">
                <label asp-for="Term" class="control-label">Tên học phần</label>
                <select asp-for="Term" class="form-control" asp-items="ViewBag.Term"></select>
            </div>@* 
            <div class="form-group">
                <label asp-for="Status" class="control-label">Trạng thái</label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Trở lại</a>
            </div>
        </form>
    </div>
</div>

