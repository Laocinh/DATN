@model DATN.Models.DetailTerm

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Admin.cshtml";
}

<h2 style="margin-top:50px">Sửa thông tin chí tiết học phần</h2>


<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Term" class="control-label">Học phần </label>
                <select asp-for="Term" class="form-control" asp-items="ViewBag.Term"></select>
                <span asp-validation-for="Term" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semester" class="control-label">Học kỳ</label>
                <select asp-for="Semester" class="form-control" asp-items="ViewBag.Semester"></select>
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label">Bộ môn</label>
                <select asp-for="Subject" class="form-control" asp-items="ViewBag.Subject"></select>
                <span asp-validation-for="Subject" class="text-danger"></span>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Ngày bắt đầu</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label">Ngày kết thúc</label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room" class="control-label">Địa điểm lớp</label>
                <input asp-for="Room" class="form-control" />
                <span asp-validation-for="Room" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxNumber" class="control-label">Số sinh viên tối đa</label>
                <input asp-for="MaxNumber" class="form-control" />
                <span asp-validation-for="MaxNumber" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="CreateBy" class="control-label"></label>
                <input asp-for="CreateBy" class="form-control" />
                <span asp-validation-for="CreateBy" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="CreateDate" class="control-label"></label>
                <input asp-for="CreateDate" class="form-control" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
