@model DATN.Models.CoursePoint

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Admin.cshtml";
}

<h2>Chỉnh sửa điểm tổng kết</h2>
 
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Student" class="control-label">Học viên</label>
                <select asp-for="Student" class="form-control" asp-items="ViewBag.Student"></select>
                <span asp-validation-for="Student" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetailTerm" class="control-label">Chi tiết học phần</label>
                <select asp-for="DetailTerm" class="form-control" asp-items="ViewBag.DetailTerm"></select>
                <span asp-validation-for="DetailTerm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistStudent" class="control-label">Đăng ký học phần</label>
                <select asp-for="RegistStudent" class="form-control" asp-items="ViewBag.RegistStudent"></select>
                <span asp-validation-for="RegistStudent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PointProcess" class="control-label">Điểm thành phần</label>
                <select asp-for="PointProcess" class="form-control" asp-items="ViewBag.PointProcess"></select>
                <span asp-validation-for="PointProcess" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestScore" class="control-label">Điểm thi</label>
                <input asp-for="TestScore" class="form-control" />
                <span asp-validation-for="TestScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OverallScore" class="control-label">Điểm tổng kết</label>
                <input asp-for="OverallScore" class="form-control" />
                <span asp-validation-for="OverallScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberTest" class="control-label">Lần thi</label>
                <input asp-for="NumberTest" class="form-control" />
                <span asp-validation-for="NumberTest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">Trạng thái</label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff" class="control-label">Giảng viên</label>
                <select asp-for="Staff" class="form-control" asp-items="ViewBag.Staff"></select>
                <span asp-validation-for="Staff" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="CreateBy" class="control-label"></label>
                <input asp-for="CreateBy" class="form-control" />
                <span asp-validation-for="CreateBy" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="UpdateBy" class="control-label"></label>
                <input asp-for="UpdateBy" class="form-control" />
                <span asp-validation-for="UpdateBy" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="CreateDate" class="control-label"></label>
                <input asp-for="CreateDate" class="form-control" />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="UpdateDate" class="control-label"></label>
                <input asp-for="UpdateDate" class="form-control" />
                <span asp-validation-for="UpdateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Xác nhận xóa</label>
                <select asp-for="IsDelete" class="form-select" aria-label="Default select example">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
                <span asp-validation-for="IsDelete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Hiển thị</label>
                <select asp-for="IsActive" class="form-select" aria-label="Default select example">
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Trở lại</a>
            </div>
        </form>
    </div>
</div>



