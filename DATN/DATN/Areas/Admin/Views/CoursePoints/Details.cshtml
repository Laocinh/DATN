@model DATN.Models.CoursePoint

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/Admin.cshtml";
}

<h2>Chi tiết điểm tổng kết</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Student" class="control-label">Học viên</label>
                <select asp-for="Student" readonly class="form-control" asp-items="ViewBag.Student"></select>
                <span asp-validation-for="Student" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetailTerm" class="control-label">Chi tiết học phần</label>
                <select asp-for="DetailTerm" readonly class="form-control" asp-items="ViewBag.DetailTerm"></select>
                <span asp-validation-for="DetailTerm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistStudent" class="control-label">Đăng ký học phần</label>
                <select asp-for="RegistStudent" readonly class="form-control" asp-items="ViewBag.RegistStudent"></select>
                <span asp-validation-for="RegistStudent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PointProcess" class="control-label">Điểm thành phần</label>
                <select asp-for="PointProcess" readonly class="form-control" asp-items="ViewBag.PointProcess"></select>
                <span asp-validation-for="PointProcess" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TestScore" class="control-label">Điểm thi</label>
                <input asp-for="TestScore" readonly class="form-control" />
                <span asp-validation-for="TestScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OverallScore" class="control-label">Điểm tổng kết</label>
                <input asp-for="OverallScore" readonly class="form-control" />
                <span asp-validation-for="OverallScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberTest" class="control-label">Lần thi</label>
                <input asp-for="NumberTest" readonly class="form-control" />
                <span asp-validation-for="NumberTest" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" readonly class="control-label">Trạng thái</label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff" class="control-label">Giảng viên</label>
                <select asp-for="Staff" readonly class="form-control" asp-items="ViewBag.Staff"></select>
                <span asp-validation-for="Staff" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Người tạo</label>
                <input asp-for="CreateBy" readonly class="form-control"  />
                <span asp-validation-for="CreateBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Người cập nhật</label>
                <input asp-for="UpdateBy" readonly class="form-control"  />
                <span asp-validation-for="UpdateBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ngày tạo</label>
                <input asp-for="CreateDate" readonly class="form-control"  />
                <span asp-validation-for="CreateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ngày cập nhật</label>
                <input asp-for="UpdateDate" readonly class="form-control"  />
                <span asp-validation-for="UpdateDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Xác nhận xóa</label>
                <input class="form-control" readonly @if (Model.IsDelete == true)
                {
                    <text>value="Yes"</text>
                }
                else
                {
                    <text>value="No"</text>
                }
                />

                <span asp-validation-for="IsDelete" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Hiển thị</label>
                <input class="form-control" readonly @if (Model.IsActive == true)
                {
                    <text>value="Active"</text>
                }
                else
                {
                    <text>value="Inactive"</text>
                }
                />
                <span asp-validation-for="IsActive" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Chỉnh sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Trở lại</a>
</div>
